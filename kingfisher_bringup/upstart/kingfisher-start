#!/bin/bash
# this file is generated by kingfisher_bringup/upstart/install.bash

log_file=/tmp/kingfisher-upstart.log
DATE=`date`

if [ -s /etc/ros/setup.bash ]; then
    echo "$DATE: kingfisher-start using setup file /etc/ros/setup.bash" >> $log_file
    source /etc/ros/setup.bash
else
    echo "$DATE: kingfisher-start using setup file /opt/ros/release/setup.bash" >> $log_file
    source /opt/ros/release/setup.bash
fi

interface=wlan0
echo "$DATE: kingfisher-start on interface $interface" >> $log_file

export ROS_IP=`ifconfig $interface | grep -o 'inet addr:[^ ]*' | cut -d: -f2`

echo "$DATE: kingfisher-start setting ROS_IP=$ROS_IP" >> $log_file

if [ "$ROS_IP" = "" ]; then
    echo "$DATE: kingfisher-start can't run with empty ROS_IP." >> $log_file
    exit 1
fi

if [ -s /etc/ros/release/kingfisher.launch ]; then
    setuidgid kingfisher roslaunch /etc/ros/release/kingfisher.launch
else
    setuidgid kingfisher roslaunch kingfisher_bringup minimal.launch
fi
